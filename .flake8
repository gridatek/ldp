[flake8]
# Maximum line length
max-line-length = 127

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    env,
    .venv,
    terraform/.terraform,
    *.egg-info

# Ignore specific errors
# E203: Whitespace before ':'
# E266: Too many leading '#' for block comment
# E501: Line too long (handled by max-line-length)
# W503: Line break before binary operator
# W504: Line break after binary operator
ignore =
    E203,
    E266,
    E501,
    W503,
    W504

# Max complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

# Count errors
count = True

# Show source code
show-source = True

# Statistics
statistics = True
